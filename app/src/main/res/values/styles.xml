<resources>
    <!-- Base application theme. -->
    <style name="NoAction" parent="Theme.AppCompat.Light.NoActionBar" />

    <!--自定义TextView-->
    <style name="TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--自定义TextView-->
    <style name="TextViewGrade">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <style name="VLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/shouye</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--自定义EditText-->
    <style name="EditText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:background">@drawable/textview_radion</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--自定义横向分割线-->
    <style name="HourLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/shouye</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--自定义header属性-->
    <declare-styleable name="myTextView">
        <attr name="header_title" format="string" />
        <attr name="header_is_title_visiable" format="boolean" />
        <attr name="header_is_left_iv_visiable" format="boolean" />
    </declare-styleable>

    <!-- 自定义Button控件的属性-->
    <declare-styleable name="BaseButton">
        <!-- 背景颜色-->
        <attr name="bg_color" format="color" />
        <!-- 圆角大小-->
        <attr name="bg_corner" format="dimension" />
    </declare-styleable>
</resources>