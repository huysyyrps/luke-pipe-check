<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/theme_back_color">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/comp_name"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
    </RelativeLayout>

    <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="5dp"
            app:banner_indicator_selected_color="@color/red" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/line"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_selected" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/work_list"
                    android:textColor="@color/theme_color"
                    android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/linPenetration"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/pxqbutton_select"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_penetration"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/local_penetration"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/linCircularOrStrip"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_select"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_circularorstrip"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/circular_line"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"
                            android:textSize="16dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/linStraightOrElbow"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_select"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_straightorelbow"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/straight"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:textSize="16dp"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/linWeldOther"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/pxqbutton_select"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_weldother"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weld_other"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"
                            android:textSize="16dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>